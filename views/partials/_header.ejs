<link rel="stylesheet" href="/styles/layout.css" type="text/css" />


<header>
  <nav class="navbar navbar-expand-md navbar-dark">
    <a class="navbar-brand" href="/">SnowShop</a>
    <button class="navbar-toggler" type="button">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- if user is logged in -->
    <% if (currentUser) { %>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/favourites">My Favourites</a>
          <a class="nav-item nav-link" href="/search" role="button">Search</a>
        </div>

        <!-- if user is an admin -->
        <% if (currentUser.is_admin) { %>
          <div class="navbar-nav">
            <a class="nav-item nav-link" href="/admin">Admin</a>
            <a class="nav-item nav-link" href="/addListing">Add Product</a>
          </div>
          <% } %>
      </div>
      <div>
        <form class="form-inline login-as" action="/api/users/logout" method="POST">
          <div style="margin-right: 7px;">
            <%= currentUser.email %>

          </div>
          <button type="submit" class="header-btn">Logout</button>
        </form>
      </div>

      <!-- if user is logged out -->
      <% } else { %>
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/api/users/login">Login</a>
        </div>
        <% } %>
  </nav>
</header>
